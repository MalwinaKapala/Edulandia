<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SubMenuActivity"
    >

    <TextView
        android:id="@+id/subMenuTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_text_view_name"
        android:textSize="27sp"
        android:textColor="@color/green"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <ImageView
        android:id="@+id/firstGameIconHorse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/firstgamehorse"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/secondGameWaspNest"
        app:layout_constraintTop_toBottomOf="@id/subMenuTextView"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"/>
    <ImageView
        android:id="@+id/secondGameWaspNest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/secondgamewaspnest"
        app:layout_constraintTop_toBottomOf="@+id/subMenuTextView"
        app:layout_constraintLeft_toRightOf="@+id/firstGameIconHorse"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        />
    <ImageView
        android:id="@+id/thirdGameWildBoar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/thirdgamewildboar"
        app:layout_constraintTop_toBottomOf="@+id/subMenuTextView"
        app:layout_constraintLeft_toRightOf="@+id/secondGameWaspNest"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        />


</android.support.constraint.ConstraintLayout>